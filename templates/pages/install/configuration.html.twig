{% block content %}

    <p>Basic Configuration for the application to properly work.</p>

    <form method="post" enctype="multipart/form-data" class="row g-3">
        <div class="form-floating col-md-9">
            <input type="text" name="project_name" class="form-control" id="floatingProjectName" placeholder="Volunteer Management System" value="Volunteer Management System" required>
            <label for="floatingProjectName">Website Name:</label>
        </div>

        <div class="form-floating col-md-3">
            <input type="text" name="short_name" class="form-control" id="floatingShortName" placeholder="VMS" value="VMS" required>
