{% extends 'base.html.twig' %}

{% block title %}Installation Configuration{% endblock %}

{% block body %}
    <h2>Database Configuration</h2>

    {% if error %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}

    {% if dbConnected %}
        <p style="color: green;">Database connection successful! Redirecting...</p>
    {% else %}
        <form method="post">
            <label>Database Type:</label>
            <select name="db_type">
                <option value="mysql">MySQL</option>
                <option value="pgsql">PostgreSQL</option>
            </select><br>

            <label>Host:</label>
            <input type="text" name="db_host" value="127.0.0.1" required><br>

            <label>Port:</label>
            <input type="number" name="db_port" value="3306" required><br>

            <label>Database Name:</label>
            <input type="text" name="db_name" required><br>

            <label>Username:</label>
            <input type="text" name="db_user" required><br>

            <label>Password:</label>
            <input type="password" name="db_pass"><br>

            <button type="submit">Save Configuration</button>
        </form>
    {% endif %}
{% endblock %}
